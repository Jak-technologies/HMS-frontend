{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "jsx-a11y/anchor-is-valid": "warn",
    "no-unused-expressions": "error",
    "no-sequences": "warn",
    "no-mixed-operators": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}